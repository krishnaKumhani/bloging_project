<%- include('header') %>


            <!-- END HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                <% if(locals.flash.success.length >0 && locals.flash.success){ %>
                                    <div class="alert alert-success" >
                                        <%= locals.flash.success %>
                                    </div>
                                    <% } %>
                                <div class="table-responsive table--no-card m-b-30">
                                    <table class="table table-borderless table-striped table-earning">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Post Title</th>
                                                <th>name</th>
                                                <th>Email</th>
                                                <th>Message</th>
                                                <th>Image</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% var no=0; for(var ad of commentData) { %>
                                            <tr>
                                                <td><%= ++no; %></td>
                                                <td><%= ad.postId.title %></td>
                                                <td><%= ad.name %></td>
                                                <td><%= ad.email %></td>
                                           
                                                <td><%= ad.message %></td>
                                                <td><img src="<%= ad.commentImage %>" height="100" /></td>
                                                <td>
                                                    <% if(ad.status){ %>
                                                    <a href="/admin/slider/deactive/<%= ad.id %>" class="btn btn-success">Active</a></td>
                                                    <% } else { %>
                                                        <a href="/admin/slider/active/<%= ad.id %>" class="btn btn-danger">Deactive</a></td>
                                                        
                                                    <% } %>
                                                <td>
                                                   <a href="/admin/deleteAdmin/<%= ad.id %>"><i class="fa fa-trash"></i></a> ||
                                                    
                                                   <a href="/admin/updateAdmin/?id=<%= ad.id %>"><i class="fa fa-edit"></i></a>
                                                </td>
                                                
                                            </tr>
                                            <% } %>
                                           
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            
                        </div>
                       
                       
<%- include('footer') %>